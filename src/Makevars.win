VERSION = 0.8.6
RWINLIB = ../windows/libssh-${VERSION}

PKG_CPPFLAGS = -DLIBSSH_STATIC \
	-I${RWINLIB}/include

PKG_LIBS = \
	-L${RWINLIB}/lib${R_ARCH} \
	-lssh -lcrypto -lz -lws2_32 -lgdi32 -lcrypt32

all: clean winlibs

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R" $(VERSION)

clean:
	rm -f $(SHLIB) $(OBJECTS)

.PHONY: all winlibs clean
